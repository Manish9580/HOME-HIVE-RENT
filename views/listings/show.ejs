<%layout("layouts/biolerplate")%>

   <div class="row mt-3">
      <div class="col-8 offset-3">
         <h3>Listing Details:</h3>
         </div>
    
   <div class="card col-6 offset-3 show-card" style="width: 18rem;">
      <img src="<%=listing.image%>" class="card-img-top show-img" alt="listing_image">
      <div class="card-body">
        <p class="card-text">
          <b><%=listing.title%></b> <br>
          <b><li><%=listing.description%></li></b> <br>
          <b><li>&#8377; <%=listing.price.toLocaleString("en-IN")%></li></b> <br>
          <b> <li><%=listing.location%></li></b> <br>
          <b><li><%=listing.country%></li></b>
      </p>
      </div>
    </div>
      <br>
<div class="btns">
   <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit </a>
   <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
 
      <button class="btn btn-dark  offset-3">Delete </button>
     </form>
</div>

</div>

